<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="70dp"
        android:weightSum="2">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/programmation"
            android:text="Programmation"
            android:background="@drawable/button"
            android:visibility="visible"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="70dp"
        android:weightSum="2">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/test"
            android:text="Test"
            android:background="@drawable/button"
            android:clickable="true"
            android:visibility="invisible" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/parametres"
            android:text="Parametres"
            android:background="@drawable/button"
            android:visibility="invisible"/>

    </LinearLayout>

    <TextView
        android:id="@+id/way"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="5dp"
        android:textColor="#000000"
        android:textSize="15dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="160dp"
        android:layout_marginBottom="5dp"
        android:text="Info :"
        android:textColor="#000000"
        android:textSize="23dp" />

    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="200dp"
        android:layout_marginRight="5dp"
        android:text="- PIN : 1234"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/flash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp"
        android:layout_marginBottom="5dp"
        android:text="Flash"
        android:visibility="invisible" />

    <Switch
        android:id="@+id/allumer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="220dp"
        android:layout_marginBottom="5dp"
        android:text="Allumer"
        android:visibility="invisible" />

    <Switch
        android:id="@+id/capteur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="260dp"
        android:layout_marginBottom="5dp"
        android:text="Capteur"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/lengthText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="170dp"
        android:layout_marginRight="5dp"
        android:text="Seuil distance : "
        android:textColor="#000000"
        android:textSize="18dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/widthText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="230dp"
        android:layout_marginRight="5dp"
        android:text="Largeur de Flash : "
        android:textColor="#000000"
        android:textSize="18dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/amplitudeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="290dp"
        android:layout_marginRight="5dp"
        android:text="Amplitude (%) : "
        android:textColor="#000000"
        android:textSize="18dp"
        android:visibility="invisible" />

    <Spinner
        android:id="@+id/seuil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="150dp"
        android:layout_marginRight="5dp"
        android:spinnerMode="dropdown"
        android:textSize="15dp"
        android:visibility="invisible" />

    <Spinner
        android:id="@+id/flashWidth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="200dp"
        android:layout_marginRight="5dp"
        android:textSize="15dp"
        android:visibility="invisible"/>

    <Spinner
        android:id="@+id/artworkAmplitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="200dp"
        android:layout_marginRight="5dp"
        android:textSize="15dp"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/returnn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/returnn"
        android:visibility="invisible" />

    <Button
        android:id="@+id/valider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="370dp"
        android:layout_marginBottom="5dp"
        android:text="Valider"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textViewReceived"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="440dp"
        android:layout_marginRight="5dp"
        android:text="Receive : "
        android:textColor="#000000"
        android:textSize="18dp"
        android:visibility="invisible" />




</RelativeLayout>
